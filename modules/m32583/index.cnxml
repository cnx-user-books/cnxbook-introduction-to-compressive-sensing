                    <m:mo form="prefix">exp</m:mo>
                  </m:mrow>
                  <m:mfenced separators="" open="(" close=")">
                    <m:mi>λ</m:mi>
                    <m:mi>β</m:mi>
                    <m:mi>M</m:mi>
                    <m:msup>
                      <m:mi>σ</m:mi>
