    <para id="id264062">Thus,</para>
    <equation id="id264068"><m:math overflow="scroll" mode="display">
        <m:mrow>
<m:munderover>
         <m:mrow> <m:mi>∏</m:mi></m:mrow>
          
          
            
            <m:mrow>
              <m:mi>i</m:mi>
              <m:mo>=</m:mo>
              <m:mn>1</m:mn>
            </m:mrow>
            <m:mi>M</m:mi>
